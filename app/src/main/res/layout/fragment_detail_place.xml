<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:layout_marginTop="80dp">

        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/signed_in_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/placeDetailImageView"
                android:adjustViewBounds="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/placeDetailCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="272dp"
                android:layout_marginLeft="8dp"
                style="@style/CategoryLabelBig"/>

            <TextView
                android:id="@+id/placeDetailLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeDetailImageView" />

            <TextView
                android:id="@+id/placeDetailCoordDelimiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeDetailImageView"
                android:layout_toRightOf="@+id/placeDetailLat"
                android:text=" - " />

            <TextView
                android:id="@+id/placeDetailLng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeDetailImageView"
                android:layout_toRightOf="@+id/placeDetailCoordDelimiter" />

        </RelativeLayout>
</ScrollView>