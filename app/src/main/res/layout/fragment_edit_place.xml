<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_marginTop="62dp"
    tools:context="ch.marcbaechinger.whereihavebeen.app.EditPlaceActivity.EditPlaceFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/createEditTitle"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:textSize="24dp"
            android:hint="@string/placeTitlePlaceholder" />

        <Spinner
            android:id="@+id/createEditCategory"
            android:layout_below="@id/createEditTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"/>


        <FrameLayout
            android:id="@+id/createImageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createEditCategory">

            <ImageView
                android:id="@+id/createImage"
                android:adjustViewBounds="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map" />
        </FrameLayout>

        <Button
            android:id="@+id/createButtonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createImageLayout"
            android:text="@string/button_save"
            android:layout_marginTop="42dp"
            android:elevation="12dp"
            android:background="@drawable/background" />


    </RelativeLayout>

</ScrollView>