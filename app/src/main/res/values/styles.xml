<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/wihbPrimaryColor</item>
        <item name="android:textColorPrimary">@color/wihbTextColorPrimary</item>
        <item name="android:textColor">@color/wihbTextColor</item>
        <item name="android:colorPrimaryDark">@color/wihbPrimaryColorDark</item>
    </style>

    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CategoryLabel">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/category_background</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="CategoryLabelBig">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/category_background_big</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Fab">
        <item name="android:background">@drawable/fab_background</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:elevation">12dp</item>
    </style>

    <style name="FabSecondary" parent="Fab">
        <item name="android:layout_marginBottom">88dp</item>
        <item name="android:background">@drawable/fab_secondary_background</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="locationSpot">
        <item name="android:background">@drawable/location_background</item>
        <item name="android:textColor">@color/locationTextColor</item>
    </style>

    <style name="locationSpotText">
        <item name="android:textColor">@color/locationTextColor</item>
    </style>

</resources>
