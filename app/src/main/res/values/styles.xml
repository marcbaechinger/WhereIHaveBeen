<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/wihbPrimaryColor</item>
        <item name="android:textColorPrimary">@color/wihbTextColorPrimary</item>
        <item name="android:textColor">@color/wihbTextColor</item>
        <item name="android:colorPrimaryDark">@color/wihbPrimaryColorDark</item>
    </style>


    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CategoryLabel">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/category_background</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="CategoryLabelBig">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/category_background_big</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>
